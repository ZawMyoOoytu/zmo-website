{
  "version": 2,
  "name": "zmo-frontend",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "env": {
    "REACT_APP_API_URL": "https://zmo-backend.onrender.com",
    "REACT_APP_API_BASE_URL": "https://zmo-backend.onrender.com/api",
    "REACT_APP_ADMIN_URL": "https://zmo-admin.vercel.app",
    "REACT_APP_FRONTEND_URL": "https://zmo-frontend.vercel.app"
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}