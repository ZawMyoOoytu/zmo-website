# admin-panel/.env
# ========================================
# CREATE REACT APP ENVIRONMENT VARIABLES
# ========================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_BACKEND_URL=http://localhost:5000

# For production (uncomment when needed)
# REACT_APP_API_URL=https://zmo-backend.onrender.com/api
# REACT_APP_API_BASE_URL=https://zmo-backend.onrender.com/api
# REACT_APP_BACKEND_URL=https://zmo-backend.onrender.com

# Environment
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_DEBUG=true

# Build Information
REACT_APP_BUILD_ID=local-development
REACT_APP_BUILD_TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Application
PORT=3001
BROWSER=none
GENERATE_SOURCEMAP=true

# Feature Flags
REACT_APP_ENABLE_MOCK_API=false
REACT_APP_USE_LOCAL_STORAGE_FALLBACK=true