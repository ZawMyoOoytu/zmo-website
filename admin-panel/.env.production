# ========================================
# PRODUCTION ENVIRONMENT
# ========================================

# Backend API Configuration
REACT_APP_API_URL=https://zmo-backend.onrender.com/api
REACT_APP_BACKEND_URL=https://zmo-backend.onrender.com

# Environment
REACT_APP_NODE_ENV=production
REACT_APP_ENABLE_DEBUG=false

# Build Information
REACT_APP_BUILD_ID=production-$(git rev-parse --short HEAD)
REACT_APP_BUILD_TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Feature Flags
REACT_APP_ENABLE_MOCK_API=false
REACT_APP_USE_LOCAL_STORAGE_FALLBACK=false

# React App Settings
PORT=3000
BROWSER=none
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
DISABLE_ESLINT_PLUGIN=true